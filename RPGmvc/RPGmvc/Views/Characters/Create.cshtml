@model RPGmvc.Models.Character

@{
    ViewBag.Title = "Create";
}

<h2>Creation</h2>
<p>Pour créer votre personnage, il suffit d'entrer votre nom et celui de votre personnage. Les caractéristiques de base étant générées aléatoirement, vous n'avez rien d'autre à faire!</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Character</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.LabelFor(model => model.characterName)
        
            <div>
                @Html.EditorFor(model => model.characterName)
            </div>
        </div>

        <div class="form-group">
             @Html.LabelFor(model => model.playerName)
        
            <div>
                @Html.EditorFor(model => model.playerName)
            </div>
        </div>

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
